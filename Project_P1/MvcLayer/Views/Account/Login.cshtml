@model ModelsLibrary.Customer

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sign-In</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FirstName" class="form-control" readonly="@(true)" />
            <input type="hidden" asp-for="LastName" class="form-control" readonly="@(true)" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassord" class="control-label"></label>
                <input asp-for="UserPassord" class="form-control" />
                <span asp-validation-for="UserPassord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign-In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <h6>New to Kwik-E-Mart?</h6>
    <button class="btn-light"><a class="btn" asp-area="" asp-controller="Account" asp-action="SignUp">Create your Kwik-E-Mart account</a></button>
    <button class="btn-light"><a class="btn" asp-area="" asp-controller="Account" asp-action="Customers">List of all Kwik-E-Mart Shoppers</a></button>

</div>

