@model ModelsLibrary.ViewModels.ItemViewModel
@{
    ViewData["Title"] = "AddToCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Html.DisplayFor(model => model.ProductName)</h1>

<div>
    <h4>$@Html.DisplayFor(model => model.Price)</h4>
    <h5>@Html.DisplayFor(model => model.ProductDesc)</h5>
    <hr />
    <form asp-action="AddToCart">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="ProductId" class="form-control" readonly="@(true)" />
            <input type="hidden" asp-for="ProductName" class="form-control" readonly="@(true)" />
            <input type="hidden" asp-for="Price" class="form-control" readonly="@(true)" />
            <input type="hidden" asp-for="ProductDesc" class="form-control" readonly="@(true)" />
            <input type="hidden" asp-for="Stock" class="form-control" readonly="@(true)" />
            <label asp-for="OrderQuantity" class="control-label"></label>
            <input asp-for="OrderQuantity" class="form-control" />
            <span asp-validation-for="OrderQuantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add to Cart" class="btn btn-primary" />
        </div>
    </form>
</div>
